							li.nav-item
								a.nav-link(data-scroll='', href='#skills')
									span.sliding-middle-out Skills
							li.nav-item
								a.nav-link(data-scroll='', href='#portfolio')
									span.sliding-middle-out Portfolio
							li.nav-item
								a.nav-link(href='#blog')
									span.sliding-middle-out Blog
